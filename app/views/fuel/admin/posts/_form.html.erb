<%= form_for [:admin, @post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :tag %>
  <%= f.text_field :tag %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= link_to 'Edit', '#', data: { id: "edit" }, class: "edit-preview-toggle" %>
  <%= link_to 'Preview', '#', data: { id: "preview" }, class: "edit-preview-toggle" %>
  <div id="content-edit" class="content-area">
    <%= f.text_area :content, cols: "80", rows: "20" %>
  </div>
  <div id="content-preview" class="content-area" style="display:none;">
    <%= render 'content', content: @post.content %>
  </div>
  <%= f.submit 'Publish' %>
  <%= f.submit 'Save Draft' %>
<% end %>
