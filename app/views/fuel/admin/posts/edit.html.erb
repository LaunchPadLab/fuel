<%= render 'posts' %>
<section class="page">
  <header class="page-header">
    <h5 class="page-header--title"><span>Post</span>: <%= @post.title %></h5>
    <%= link_to 'Preview Post', '#', class: "js-menu-trigger page-header--link" %>
  </header>
  <div class="page-area">
    <%= render 'form' %>
    <%= render partial: 'post_preview' %>
  </div>
</section>

